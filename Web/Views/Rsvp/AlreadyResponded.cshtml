@model Web.Models.ViewModels.RsvpViewModel
@{
    ViewData["Title"] = "Réponse déjà enregistrée";
    Layout = "_LayoutPublic";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white text-center py-4">
                    <h2 class="mb-0">✅ Réponse déjà enregistrée</h2>
                </div>
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div style="font-size: 4rem;">📋</div>
                        <h4 class="mt-3">Vous avez déjà répondu à cette invitation</h4>
                    </div>

                    <hr class="my-4" />

                    <div class="bg-light p-4 rounded">
                        <h5>Récapitulatif de votre réponse :</h5>
                        <dl class="row mt-3 mb-0">
                            <dt class="col-sm-4">Nom</dt>
                            <dd class="col-sm-8">@Model.Guest.FullName</dd>

                            <dt class="col-sm-4">Statut</dt>
                            <dd class="col-sm-8">
                                @if (Model.Guest.Status == Web.Models.RsvpStatus.Confirmed)
                                {
                                    <span class="badge bg-success">✅ Présence confirmée</span>
                                }
                                else if (Model.Guest.Status == Web.Models.RsvpStatus.Declined)
                                {
                                    <span class="badge bg-danger">❌ Absence confirmée</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">⏳ En attente</span>
                                }
                            </dd>

                            @if (Model.Guest.Status == Web.Models.RsvpStatus.Confirmed)
                            {
                                <dt class="col-sm-4">Nombre de personnes</dt>
                                <dd class="col-sm-8">@Model.Guest.NumberOfPeople</dd>

                                @if (!string.IsNullOrWhiteSpace(Model.Guest.DietaryRestrictions))
                                {
                                    <dt class="col-sm-4">Contraintes alimentaires</dt>
                                    <dd class="col-sm-8">@Model.Guest.DietaryRestrictions</dd>
                                }
                            }

                            @if (Model.Guest.RespondedAt.HasValue)
                            {
                                <dt class="col-sm-4">Répondu le</dt>
                                <dd class="col-sm-8">@Model.Guest.RespondedAt.Value.ToString("dd/MM/yyyy à HH:mm")</dd>
                            }
                        </dl>
                    </div>

                    <div class="alert alert-info mt-4">
                        <h6 class="alert-heading">💡 Besoin de modifier votre réponse ?</h6>
                        <p class="mb-0">
                            Ce lien ne peut être utilisé qu'une seule fois.
                            Si vous souhaitez modifier votre réponse, veuillez contacter directement
                            les organisateurs du mariage.
                        </p>
                    </div>

                    <div class="text-center mt-4">
                        <p class="text-muted">
                            À très bientôt ! 💑
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>