@{
    ViewData["Title"] = "Lien expiré";
    Layout = "_LayoutPublic";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-white text-center py-4">
                    <h2 class="mb-0">⏰ Lien expiré</h2>
                </div>
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <div style="font-size: 5rem;">⌛</div>
                    </div>

                    <h4>Ce lien a expiré</h4>
                    <p class="lead">La date limite pour répondre à cette invitation est dépassée.</p>

                    <hr class="my-4" />

                    <div class="alert alert-info">
                        <strong>💡 Que faire ?</strong>
                        <p class="mb-0">
                            Si vous souhaitez toujours confirmer votre présence,
                            veuillez contacter directement les organisateurs du mariage.
                        </p>
                    </div>

                    <p class="text-muted mt-4">
                        Ils pourront vous fournir un nouveau lien d'invitation ou
                        enregistrer votre réponse manuellement.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>