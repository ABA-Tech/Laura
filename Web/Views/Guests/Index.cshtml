@model Web.Models.ViewModels.GuestListViewModel
@{
    ViewData["Title"] = "Liste des invités";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>📋 Liste des invités</h1>
        <a asp-action="Create" class="btn btn-primary">
            ➕ Ajouter un invité
        </a>
    </div>

    <!-- Statistiques rapides -->
    <div class="row mb-3">
        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h5>@Model.TotalGuests invités</h5>
                    <p class="mb-0 text-muted">@Model.TotalPeople personnes au total</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtres -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Recherche</label>
                        <input type="text" class="form-control" name="searchTerm"
                               value="@Model.SearchTerm" placeholder="Nom, prénom ou email">
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Statut</label>
                        <select class="form-select" name="statusFilter">
                            <option value="">Tous les statuts</option>
                            <option value="0" selected="@(Model.StatusFilter == Web.Models.RsvpStatus.Pending)">En attente</option>
                            <option value="1" selected="@(Model.StatusFilter == Web.Models.RsvpStatus.Confirmed)">Confirmé</option>
                            <option value="2" selected="@(Model.StatusFilter == Web.Models.RsvpStatus.Declined)">Refusé</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Table</label>
                        <select class="form-select" name="tableFilter">
                            <option value="">Toutes les tables</option>
                            <option value="0">Sans table</option>
                            @foreach (var table in Model.Tables)
                            {
                                <option value="@table.Id" selected="@(Model.TableFilter == table.Id)">
                                    @table.Name (@table.CurrentOccupancy/@table.Capacity)
                                </option>
                            }
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Groupe</label>
                        <select class="form-select" name="groupFilter">
                            <option value="">Tous les groupes</option>
                            @foreach (var group in Model.Groups)
                            {
                                <option value="@group" selected="@(Model.GroupFilter == group)">@group</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">🔍 Filtrer</button>
                    <a asp-action="Index" class="btn btn-secondary">🔄 Réinitialiser</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Tableau des invités -->
    <div class="card">
        <div class="card-body">
            @if (Model.Guests.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Nom complet</th>
                                <th>Email</th>
                                <th>Groupe</th>
                                <th class="text-center">Personnes</th>
                                <th>Statut</th>
                                <th>Table</th>
                                <th>Contraintes</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var guest in Model.Guests)
                            {
                                <tr>
                                    <td>
                                        <strong>@guest.FullName</strong>
                                    </td>
                                    <td>
                                        <small class="text-muted">@guest.Email</small>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrWhiteSpace(guest.GroupFamily))
                                        {
                                            <span class="badge bg-info">@guest.GroupFamily</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-secondary">@guest.NumberOfPeople</span>
                                    </td>
                                    <td>
                                        @if (guest.Status == Web.Models.RsvpStatus.Confirmed)
                                        {
                                            <span class="badge bg-success">✅ Confirmé</span>
                                        }
                                        else if (guest.Status == Web.Models.RsvpStatus.Declined)
                                        {
                                            <span class="badge bg-danger">❌ Refusé</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">⏳ En attente</span>
                                        }
                                    </td>
                                    <td>
                                        @if (guest.Table != null)
                                        {
                                            <span class="badge bg-primary">@guest.Table.Name</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrWhiteSpace(guest.DietaryRestrictions))
                                        {
                                            <span title="@guest.DietaryRestrictions">🍽️</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@guest.Id"
                                               class="btn btn-sm btn-outline-info" title="Détails">
                                                👁️
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@guest.Id"
                                               class="btn btn-sm btn-outline-primary" title="Modifier">
                                                ✏️
                                            </a>
                                            <form asp-action="ResendInvitation" asp-route-id="@guest.Id"
                                                  method="post" style="display:inline;">
                                                <button type="submit" class="btn btn-sm btn-outline-secondary"
                                                        title="Renvoyer l'invitation">
                                                    📧
                                                </button>
                                            </form>
                                            <a asp-action="Delete" asp-route-id="@guest.Id"
                                               class="btn btn-sm btn-outline-danger" title="Supprimer">
                                                🗑️
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <p class="text-muted">Aucun invité trouvé avec ces critères.</p>
                    @if (!string.IsNullOrEmpty(Model.SearchTerm) || Model.StatusFilter.HasValue ||
                   Model.TableFilter.HasValue || !string.IsNullOrEmpty(Model.GroupFilter))
                    {
                        <a asp-action="Index" class="btn btn-primary">Voir tous les invités</a>
                    }
                    else
                    {
                        <a asp-action="Create" class="btn btn-primary">Ajouter le premier invité</a>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Confirmation avant suppression
        document.querySelectorAll('a[href*="Delete"]').forEach(link => {
            link.addEventListener('click', function(e) {
                if (!confirm('Êtes-vous sûr de vouloir supprimer cet invité ?')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}